@model PO_Assignment_Project.Models.Material

@{
    ViewData["Title"] = "Edit Material";
}

<h2>Edit Material</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="ID" />
    <div class="form-group">
        <label asp-for="Code" class="control-label"></label>
        <input asp-for="Code" class="form-control" />
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ShortText" class="control-label"></label>
        <input asp-for="ShortText" class="form-control" />
        <span asp-validation-for="ShortText" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="intText" class="control-label"></label>
        <textarea asp-for="intText" class="form-control"></textarea>
        <span asp-validation-for="intText" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Unit" class="control-label"></label>
        <input asp-for="Unit" class="form-control" />
        <span asp-validation-for="Unit" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ReorderLevel" class="control-label"></label>
        <input asp-for="ReorderLevel" class="form-control" />
        <span asp-validation-for="ReorderLevel" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MinOrderQuantity" class="control-label"></label>
        <input asp-for="MinOrderQuantity" class="form-control" />
        <span asp-validation-for="MinOrderQuantity" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IsActive" class="control-label"></label>
        <input asp-for="IsActive" class="form-check-input" />
        <span asp-validation-for="IsActive" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
