@model PO_Assignment_Project.Models.PurchaseOrder

@{
    ViewData["Title"] = "Purchase Order Details";
}

<h2>Purchase Order Details</h2>

<div>
    <h4>Purchase Order</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Order Number
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrderNumber)
        </dd>

        <dt class="col-sm-2">
            Order Date
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrderDate)
        </dd>

        <dt class="col-sm-2">
            Vendor
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Vendor.Name)
        </dd>

        <dt class="col-sm-2">
            Notes
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Notes)
        </dd>

        <dt class="col-sm-2">
            Order Value
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrderValue)
        </dd>

        <dt class="col-sm-2">
            Order Status
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrderStatus)
        </dd>
    </dl>
</div>

<h4>Order Details</h4>
<table class="table">
    <thead>
        <tr>
            <th>Material</th>
            <th>Quantity</th>
            <th>Rate</th>
            <th>Value</th>
            <th>Expected Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.PurchaseOrderDetails)
        {
            <tr>
                <td>@item.Material.ShortText</td>
                <td>@item.ItemQuantity</td>
                <td>@item.ItemRate</td>
                <td>@item.ItemValue</td>
                <td>@item.ExpectedDate.ToShortDateString()</td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Edit" asp-route-id="@Model.ID" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
