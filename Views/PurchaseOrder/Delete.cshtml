@model PO_Assignment_Project.Models.PurchaseOrder

@{
    ViewData["Title"] = "Delete Purchase Order";
}

<h2>Delete Purchase Order</h2>

<h3>Are you sure you want to delete this Purchase Order?</h3>

<div>
    <h4>Purchase Order Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Order Number</dt>
        <dd class="col-sm-10">@Model.OrderNumber</dd>

        <dt class="col-sm-2">Order Date</dt>
        <dd class="col-sm-10">@Model.OrderDate.ToString("yyyy-MM-dd")</dd>

        <dt class="col-sm-2">Vendor ID</dt>
        <dd class="col-sm-10">@Model.VendorID</dd>

        <dt class="col-sm-2">Notes</dt>
        <dd class="col-sm-10">@Model.Notes</dd>

        <dt class="col-sm-2">Order Value</dt>
        <dd class="col-sm-10">@Model.OrderValue</dd>

        <dt class="col-sm-2">Order Status</dt>
        <dd class="col-sm-10">@Model.OrderStatus</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="ID" />
    <input type="submit" value="Delete" class="btn btn-danger" /> |
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
