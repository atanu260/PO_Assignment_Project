@model PO_Assignment_Project.Models.Vendor

@{
    ViewData["Title"] = "Delete Vendor";
}

<h2>Delete Vendor</h2>

<h3>Are you sure you want to delete this vendor?</h3>
<div>
    <h4>@Model.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Code</dt>
        <dd class="col-sm-10">@Model.Code</dd>

        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Address Line 1</dt>
        <dd class="col-sm-10">@Model.AddressLine1</dd>

        <dt class="col-sm-2">Address Line 2</dt>
        <dd class="col-sm-10">@Model.AddressLine2</dd>

        <dt class="col-sm-2">Contact Email</dt>
        <dd class="col-sm-10">@Model.ContactEmail</dd>

        <dt class="col-sm-2">Contact No</dt>
        <dd class="col-sm-10">@Model.ContactNo</dd>

        <dt class="col-sm-2">Valid Till Date</dt>
        <dd class="col-sm-10">@Model.ValidTillDate.ToShortDateString()</dd>

        <dt class="col-sm-2">Is Active</dt>
        <dd class="col-sm-10">@Model.IsActive</dd>
    </dl>

    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="ID" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
