
 @model IEnumerable<PO_Assignment_Project.Models.Vendor>

@{
    ViewData["Title"] = "Vendor List";
}

<h2>Vendor List</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Vendor</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Code)</th>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.AddressLine1)</th>
            <th>@Html.DisplayNameFor(model => model.AddressLine2)</th>
            <th>@Html.DisplayNameFor(model => model.ContactEmail)</th>
            <th>@Html.DisplayNameFor(model => model.ContactNo)</th>
            <th>@Html.DisplayNameFor(model => model.ValidTillDate)</th>
            <th>@Html.DisplayNameFor(model => model.IsActive)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var vendor in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => vendor.Code)</td>
                <td>@Html.DisplayFor(modelItem => vendor.Name)</td>
                <td>@Html.DisplayFor(modelItem => vendor.AddressLine1)</td>
                <td>@Html.DisplayFor(modelItem => vendor.AddressLine2)</td>
                <td>@Html.DisplayFor(modelItem => vendor.ContactEmail)</td>
                <td>@Html.DisplayFor(modelItem => vendor.ContactNo)</td>
                <td>@vendor.ValidTillDate.ToShortDateString()</td>
                <td>@Html.DisplayFor(modelItem => vendor.IsActive)</td>

                <td>
                    <a asp-action="Edit" asp-route-id="@vendor.ID" class="btn btn-warning btn-sm">Edit</a> |
                    <a asp-action="Details" asp-route-id="@vendor.ID" class="btn btn-info btn-sm">Details</a> |
                    <a asp-action="Delete" asp-route-id="@vendor.ID" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
